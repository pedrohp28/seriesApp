<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_view_bg"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/activity_lista_series">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/txtNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/txtPlataforma"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/txtTemporada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtNome"
            android:layout_alignStart="@id/txtNome"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/txtEpisodio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtTemporada"
            android:layout_alignStart="@id/txtTemporada"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/txtPlataforma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/txtDiaSemana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:textSize="14sp"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>